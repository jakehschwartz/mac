export AWS_DEFAULT_REGION=us-west-2
export ANTHROPIC_MODEL='arn:aws:bedrock:us-west-2:121286554335:application-inference-profile/3i4ptd2b4d0t'
export ANTHROPIC_DEFAULT_HAIKU_MODEL='arn:aws:bedrock:us-west-2:121286554335:application-inference-profile/0ls7cm40jo4m'
export CLAUDE_CODE_MAX_OUTPUT_TOKENS=4096
