faws(){
  if [ "$1" = "prod" ]; then
    region="us-east-1"
    echo 'Logging into ' $region
  else
    region="us-west-2"
    echo 'Logging into ' $region
  fi
  : > ~/.aws/credentials; saml2aws login --session-duration=43200 --region $region --skip-prompt --skip-verify;grep -ilr 'Google-PlatformEng' ~/.aws/credentials | sed -i '' 's/region.*/region='$region'/' ~/.aws/credentials;export CODEARTIFACT_AUTH_TOKEN=`aws codeartifact get-authorization-token --domain zignal --domain-owner 121286554335 --query authorizationToken --output text`
}

export AWS_PROFILE="Google-PlatformEng"
